# Database
DATABASE_URL="postgresql://user:password@localhost:5432/glossary_tool?schema=public"

# Redis Cache
REDIS_URL="redis://localhost:6379"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# AI Services - Free Tier
GEMINI_API_KEY=""
USE_GEMINI=false

# AI Services - Paid Tier
# OpenRouter (Recommended) - One API for multiple AI providers
OPENROUTER_API_KEY=""
OPENROUTER_MODEL="anthropic/claude-3.5-sonnet"
USE_OPENROUTER=true

# Direct providers (Optional)
OPENAI_API_KEY=""
ANTHROPIC_API_KEY=""

# Server
PORT=3001
NODE_ENV="development"

# CORS
CORS_ORIGIN="http://localhost:5173"

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR="./uploads"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100